import java.awt.*;
import javax.swing.*;

public class Frame extends JFrame {

	Something s;
	
	public static void main(String[] args){
		new Frame();
	}
	
	public Frame(){
		
		// title and size of the window
		setTitle("TAP OF WAR!");
		setSize(2000,1000);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setResizable(false);
		
		init();
	}
	
	public void init(){
		//placing the images and scene on the frame
		setLocationRelativeTo(null);
		setLayout(new BorderLayout());
		s = new Something();
		add(s);
		
		JButton button = new JButton("START");
        button.setSize(100, 30);
        button.setLocation(900, 470);
        add(button);
        
        JLabel background = new JLabel(new ImageIcon(getClass().getResource("/flowers.gif")));
        add(background);
        
        JLabel background = new JLabel(new ImageIcon(getClass().getResource("/tug.gif")));
        add(background);
		
		JLabel label = new JLabel("TAP OF WAR");
        label.setHorizontalAlignment(JLabel.CENTER);
        label.setVerticalAlignment(JLabel.TOP);
        label.setFont(label.getFont().deriveFont(Font.BOLD, 48));
        label.setForeground(Color.GRAY);
        //add(label);
		
		setVisible(true);
	}
	
}
