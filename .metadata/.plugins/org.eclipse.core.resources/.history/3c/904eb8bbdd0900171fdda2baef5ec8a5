package textExcel;

public class PercentCell extends RealCell{
	
	private String percent;
	
	public PercentCell(String percent) {
		// TODO Auto-generated constructor stub
		this.percent = percent;
	}

	public double getDoubleValue(){
		String returnVal = percent.substring(0, percent.length() - 1);
		System.out.println(returnVal);
		System.out.println(Double.parseDouble(returnVal) / 100.0);
		return Double.parseDouble(returnVal) / 100.0;
	}
	
	public String abbreviatedCellText(){
		String value = String.valueOf(getDoubleValue());
		if(value.length() > 10){
			value = value.substring(0, 10);
			return value;
		}else{
			for(int i = 0; i < 10 - value.length(); i++){
				value += " ";
			}
			return value;
		}
	}
	
	public String fullCellText(){
		return String.valueOf(getDoubleValue());
	}
}