package textExcel;

abstract class RealCell implements Cell {
	
	private String cellContent;
	
	public String getRealCell(){
		return cellContent;
	}
	public void setRealCell(String value){
		cellContent = value;
		
	}
	
	public String abbreviatedCellText() {
		// TODO Auto-generated method stub
		String returnVal = cellContent;
		if(returnVal.contains("%")){
			returnVal = returnVal.substring(0, returnVal.indexOf("."));
			returnVal += "%";
		}
		System.out.println(returnVal);
		
		if(returnVal.indexOf(".") != 0){
			if(returnVal.charAt(returnVal.indexOf(".") + 2) == 0){
				returnVal = returnVal.substring(0,returnVal.indexOf(".") + 2);
			}
		}
		
		if(returnVal.length() >= 10){
			returnVal = cellContent.substring(0, 10);
			System.out.println(returnVal);
		}else{
			for(int i = 0; i < 1 - returnVal.length(); i ++){
				returnVal += " ";
				System.out.println(returnVal);
			}
			System.out.println(returnVal);
		}
		return returnVal;
	}

	public String fullCellText() {
		// TODO Auto-generated method stub
		return cellContent;
	}
	
	abstract double getDoubleValue();

}
